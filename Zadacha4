#include <iostream>
using namespace std;

void main()
{
    double x1, x2, x3, y1, y2, y3, S;
    cout << "x1: "; cin >> x1;
    cout << "y1: "; cin >> y1;
    cout << "x2: "; cin >> x2;
    cout << "y2: "; cin >> y2;
    cout << "x3: "; cin >> x3;
    cout << "y3: "; cin >> y3;
    S = fabs(x1 * y2 - x1 * y3 + x2 * y3 - x2 * y1 + x3 * y1 - x3 * y2) / 2.0;
    cout << "S = " << S;
}
